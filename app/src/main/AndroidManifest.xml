<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.applaudo.kitsu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".KitsuApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kitsu">
        <activity android:name=".ui.view.AnimeActivity"></activity>
        <activity android:name=".ui.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>